{
  "version": 2,
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/build",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/api/regions",
      "dest": "/api/regions.js"
    },
    {
      "src": "/api/bedrock-test",
      "dest": "/api/bedrock-test.js"
    },
    {
      "src": "/api/test-images",
      "dest": "/api/test-images.js"
    },
    {
      "src": "/api/search/(.*)",
      "dest": "/api/search.js"
    },
    {
      "src": "/api/matchmaking",
      "dest": "/api/matchmaking.js",
      "methods": ["POST"]
    },
    {
      "src": "/api/chat",
      "dest": "/api/chat.js",
      "methods": ["POST"]
    }
  ]
}
